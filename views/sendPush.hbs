<style>
    .user {
        display: flex;
        height: 150px;
    }

    .user-key {
        height: 30px;
        width: 50%;
        display: inline-flex;
        background-color: #eee;
        border-radius: 2px;
    }

    .user-key:empty {
        background-color: #eee;
        border-radius: 2px;
    }

    .user-endPoint {
        min-height: 80px;
        width: 100%;
        display: inline-flex;
        background-color: #eee;
        border-radius: 2px;
        word-break: break-all;
    }

    .user-endPoint:empty {

        background-color: #eee;
        border-radius: 2px;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-md-8 offset-md-2 mt-3 card card-shadow">
            <div class="box py-3">
                <h3 class="text-center">Subscriber</h3>
                <ul class="list-group js-list-group">
                    <li class="list-group-item user js-empty">
                        <span class="user-key"></span>
                        <span class="user-endPoint"></span>
                    </li>
                    <li class="list-group-item user js-empty">
                        <span class="user-key"></span>
                        <span class="user-endPoint"></span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-xs-12 col-md-8 offset-md-2 mt-3 card card-shadow">
            <div class="box py-3">
                <form>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Enter Title of Notification">
                        <small id="titleHelp" class="form-text text-muted">Only 48 character are not allowed.</small>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <input type="text" class="form-control" id="message" placeholder="Enter the Message">
                        <small id="messageHelp" class="form-text text-muted">Only 140 character are allowed</small>
                    </div>
                    <div class="form-group">
                        <label for="icon">Message</label>
                        <input type="url" class="form-control" id="icon" placeholder="Enter the icon Url">
                        <small id="iconHelp" class="form-text text-muted">Only valid url are allowed</small>
                    </div>
                     <div class="form-group">
                        <label for="richIcon">Message</label>
                        <input type="url" class="form-control" id="richIcon" placeholder="Enter the Rich Icon Url">
                        <small id="richIconHelp" class="form-text text-muted">Only valid url are allowed</small>
                    </div>
                    <button type="button" id="sendPushBtn" class="btn btn-primary">Send Push</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="successModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" role="alert">
                    <p>Notification has been send.</p>
                </div>
            </div>
        </div>
    </div>
</div>